div.content
	p#title 成员管理
	div#controlBar
		label 快速过滤:
			input(type="text" class="form-control" ng-model="keyword" placeholder="关键词")
			span 总计: {{(memberList | filter:keyword).length}} 项

	table.memberList
		thead
			tr
				th 用户ID
				th 姓名
				th 邮箱
				th 手机
				th 操作

		tbody
			tr(ng-repeat="member in memberList | filter:keyword")
				td {{member.userID}}
				td {{member.name}}
				td {{member.email}}
				td {{member.phone}}
				td
					button(type="button" class="btn btn-warning" ng-click="delete()") 删除

	br
	div#add
		label 添加成员:
			input(type="email" class="form-control" ng-model="newEmail" placeholder="用户邮箱")
		br
		button(type="button" class="btn btn-success" ng-click="add()") 添加
