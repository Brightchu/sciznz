div.content
	p#title 订单信息
	div#controlBar
		label 快速过滤:
			input(type="text" class="form-control" ng-model="keyword" placeholder="关键词")
			span 总计: {{(orderList | filter:keyword).length}} 项

	table.orderList
		thead
			tr
				th 订单号
				th 仪器名称
				th 提供方
				th 下单时间
				th 预约使用时间
				th 价格
				th 订单状态
				th 操作

		tbody
			tr(ng-repeat="order in orderList | filter:keyword")
				td {{order.ID}}
				td
					a(href="/#/device/{{order.deviceID}}") {{order.category}}
				td {{order.institute}}
				td {{order.date}}
				td {{order.useDate}}
				td {{order.price}}
				td {{order.status | statusFilter}}
				td
					div(class="btn-group")
						button(type="button" class="{{order.status | classFilter}}" ng-click="upgrade()") {{order.status | buttonTextFilter}}
						button(type="button" ng-if="order.status !== 0 && order.status !== 6" class="btn btn-warning" ng-click="cancel()") 取消
