doctype html
html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
		meta(name="description" content="科学指南针")
		meta(name="renderer" content="webkit")
		meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
		meta(name="mobile-web-app-capable" content="yes")
		meta(name="apple-mobile-web-app-capable" content="yes")
		title 首页 - 科学指南针
		link(rel="stylesheet" href="/static/bower_components/bootstrap/dist/css/bootstrap.min.css")
		link(rel="stylesheet" href="/static/bower_components/animate.css/animate.min.css")
		link(rel="stylesheet" href="/static/bower_components/fonts.css/fonts.css")
		link(rel="stylesheet" href="/static/bower_components/cube.less/css/cube.css")
		link(rel="stylesheet" href="/static/css/style.css")
		link(rel="icon" type="image/png" sizes="256x256" href="/static/img/logo.png")

	body.font-hei(ng-app="sciApp" ng-strict-di)
		nav(ng-controller="navCtrl")
			a(href="#/")
				img#logo(src="/static/img/logo-landscape.png")
			ul.left
				li(ng-click="scrollTo('#flow')") 预约流程
				li(ng-click="scrollTo('#supply')") 仪器供应
				li(ng-click="scrollTo('#user')") 用户案例

			ul.right
				li(ng-click="open()") {{name | translate}}

		div(class="view-frame" ng-view)

		script(src="/static/bower_components/angular/angular.min.js")
		script(src="/static/bower_components/angular-route/angular-route.min.js")
		script(src="/static/bower_components/angular-resource/angular-resource.min.js")
		script(src="/static/bower_components/angular-translate/angular-translate.min.js")
		script(src="/static/bower_components/angular-animate/angular-animate.min.js")
		script(src="/static/bower_components/angular-scroll/angular-scroll.min.js")
		script(src="/static/bower_components/angular-cookies/angular-cookies.min.js")
		script(src="/static/bower_components/angular-ui-utils/ui-utils.min.js")
		script(src="/static/bower_components/angular-bootstrap/ui-bootstrap-tpls.min.js")
		script(src="/static/js/script.js")
