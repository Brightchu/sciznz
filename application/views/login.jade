doctype html
html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
		meta(name="description" content="{role_zh} - 科学指南针")
		meta(name="renderer" content="webkit")
		meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
		title {role_zh} - 科学指南针
		link(rel="stylesheet" href="/static/bower_components/bootstrap/dist/css/bootstrap.min.css")
		link(rel="stylesheet" href="/static/bower_components/fonts.css/fonts.css")
		link(rel="stylesheet" href="/static/css/login.css")
		link(rel="icon" type="image/png" sizes="256x256" href="/static/img/logo.png")

	body.font-hei
		div.container
			img#logoBox(src="/static/img/logo-landscape.png")
			form#loginForm(action="/{role}/login/" method="post")
				h2 {role_zh}登录
				{error}
				div(class="alert alert-danger" role="alert" id="error-tip") {text}
				{/error}
				input(type="email" name="email" class="form-control" placeholder="账号" required autofocus)
				input(type="password" name="password" class="form-control" placeholder="密码" required)
				input(type="text" name="captcha" class="form-control" placeholder="验证码" required)
				img#captcha(src="{src}")
				button(type="submit" id="submit" class="btn btn-primary") 登录
