					p
						a(href="#/instrument") 仪器管理
					p
						a(href="#/permit") 仪器审核
				accordion-group(heading="用户管理")
					p
						a(href="#/user") 用户管理
					p
						a(href="#/level") 用户级别
				accordion-group(heading="订单管理")
					p
						a(href="#/order") 订单管理
					p
						a(href="#/status") 订单状态
				accordion-group(heading="管理员")
					p
						a(href="#/admin") 管理员

		div#main(class="view-frame" ng-view)
