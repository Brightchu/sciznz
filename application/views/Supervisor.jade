	body(ng-app="supervisorApp")
		div#sidebar(ng-controller="AccordionCtrl")
			accordion
				accordion-group(heading="数据中心", is-open="isFirstOpen")
					p
						a(href="#/") 全局
					p
						a(href="#/visitor") 访客统计
					p
						a(href="#/booking") 预约统计
					p
						a(href="#/pay") 支付统计
				accordion-group(heading="前台管理")
					p
						a(href="#/icon") 首页图标
					p
						a(href="#/content") 首页栏目
				accordion-group(heading="分类管理")
					p
						a(href="#/category") 仪器分类
					p
						a(href="#/keyword") 仪器关键词
				accordion-group(heading="机构管理")
					p
						a(href="#/institute") 机构管理
					p
						a(href="#/verify") 机构审核
					p
						a(href="#/operator") 操作员管理
