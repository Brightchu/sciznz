doctype html
html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
		meta(name="description" content="用户中心 - 科学指南针")
		meta(name="renderer" content="webkit")
		meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
		title 用户中心 - 科学指南针
		link(rel="stylesheet" href="/static/bower_components/bootstrap/dist/css/bootstrap.min.css")
		link(rel="stylesheet" href="/static/bower_components/animate.css/animate.min.css")
		link(rel="stylesheet" href="/static/bower_components/fonts.css/fonts.css")
		link(rel="stylesheet" href="/static/css/theme.css")
		link(rel="stylesheet" href="/static/css/panel.css")
		link(rel="icon" type="image/png" sizes="256x256" href="/static/img/logo.png")

	body.font-hei(ng-app="userApp" ng-strict-di)
		div#top(ng-controller="topCtrl")
			a.left(href='/')
				img#logo(src='/static/img/logo.png')
				span.title 科学指南针
			span.hello {{name}}, 您好!

		div#sidebar(ng-controller="accordionCtrl")
			accordion
				accordion-group(heading="预约中心")
					p
						a(href="#/order-active") 正在进行
					p
						a(href="#/order-done") 已完成
				accordion-group(heading="个人中心")
					p
						a(href="#/personal-info") 个人信息
					p
						a(ng-click="logout()") 退出当前账号

		div#main(class="view-frame" ng-view)

		script(src="/static/bower_components/angular/angular.min.js")
		script(src="/static/bower_components/angular-route/angular-route.min.js")
		script(src="/static/bower_components/angular-resource/angular-resource.min.js")
		script(src="/static/bower_components/angular-translate/angular-translate.min.js")
		script(src="/static/bower_components/angular-animate/angular-animate.min.js")
		script(src="/static/bower_components/angular-cookies/angular-cookies.min.js")
		script(src="/static/bower_components/angular-bootstrap/ui-bootstrap-tpls.min.js")
		script(src="/static/js/user.js")
