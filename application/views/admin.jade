doctype html
html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
		meta(name="description" content="管理员 - 科学指南针")
		meta(name="renderer" content="webkit")
		meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
		title 管理员 - 科学指南针
		link(rel="stylesheet" href="/static/bower_components/bootstrap/dist/css/bootstrap.min.css")
		link(rel="stylesheet" href="/static/bower_components/animate.css/animate.min.css")
		link(rel="stylesheet" href="/static/bower_components/angular-ui-grid/ui-grid.min.css")
		link(rel="stylesheet" href="/static/bower_components/fonts.css/fonts.css")
		link(rel="stylesheet" href="/static/bower_components/jsoneditor/dist/jsoneditor.min.css")
		link(rel="stylesheet" href="/static/css/theme.css")
		link(rel="stylesheet" href="/static/css/panel.css")
		link(rel="icon" type="image/png" sizes="256x256" href="/static/img/logo.png")

	body.font-hei(ng-app="adminApp" ng-strict-di)
		#top(ng-controller="topCtrl")
			a.left(href='/')
				img#logo(src='/static/img/logo.png')
				span.title 科学指南针
			span.hello {{info.name}}, 您好!

		#sidebar(ng-controller="accordionCtrl")
			accordion
				accordion-group(heading="数据中心")
					p
						a(href="#/data-overview") 全局
					p
						a(href="#/data-visitor") 访客统计
					p
						a(href="#/data-booking") 预约统计
					p
						a(href="#/data-payment") 支付统计
				accordion-group(heading="前台管理")
					p
						a(href="#/front-hierarchy") 层级管理
					p
						a(href="#/front-category") 分类管理
					p
						a(href="#/front-model") 型号管理
					p
						a(href="#/front-device") 仪器管理
					p
						a(href="#/front-cache") 更新缓存
				accordion-group(heading="缓存管理")
					p
						a(href="#/cache-admin") 缓存管理
				accordion-group(heading="机构管理")
					p
						a(href="#/supply-admin") 机构管理
				accordion-group(heading="人员管理")
					p
						a(href="#/people-user") 用户管理
					p
						a(href="#/people-staff") 操作员管理
					p
						a(href="#/people-admin") 监督员管理
				accordion-group(heading="预约管理")
					p
						a(href="#/booking-admin") 预约管理

		#main(class="view-frame" ng-view)

		script(src="/static/bower_components/angular/angular.min.js")
		script(src="/static/bower_components/angular-route/angular-route.min.js")
		script(src="/static/bower_components/angular-resource/angular-resource.min.js")
		script(src="/static/bower_components/angular-animate/angular-animate.min.js")
		script(src="/static/bower_components/angular-cookies/angular-cookies.min.js")
		script(src="/static/bower_components/angular-bootstrap/ui-bootstrap-tpls.min.js")
		script(src="/static/bower_components/angular-ui-grid/ui-grid.min.js")
		script(src="/static/bower_components/jsoneditor/dist/jsoneditor.min.js")
		script(src="/static/js/admin.js")
